<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/superHeroImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#fa2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SuperHeroName"

        app:layout_constraintStart_toEndOf="@id/superHeroImageView"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SuperHeroAuthor"

        app:layout_constraintStart_toEndOf="@id/superHeroImageView"
        app:layout_constraintTop_toBottomOf="@id/SuperHeroName"

        />

</androidx.constraintlayout.widget.ConstraintLayout>